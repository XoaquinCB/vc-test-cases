#include "solution.hpp"
#include <gtest/gtest.h>
#include <vector>

using namespace ::testing;
using namespace ::std;

TEST(SolutionTests, Test1)
{
    int moneySaved = 8;
    int expected = 4;
    ASSERT_EQ(expected, NumberOfDaysToSave(moneySaved));
}
